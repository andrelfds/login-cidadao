{% set providers_count = 0 %}
{% for provider, status in third_party_login %}
    {% if status == true %}
        {% set providers_count = providers_count + 1 %}
    {% endif %}
{% endfor %}
{% if third_party_login is not empty and providers_count > 0 %}
    {% set columns = 12 / providers_count %}
    <div class="row">
        <div class="col-md-12 text-center">
            <div class="box connect-box lc-box clearfix">
                <h3>{% trans %}Use accounts from other services{% endtrans %}</h3>
                <p class="hidden-sm hidden-xs">{% trans %}If you prefer, it's possible to use other services to login or create your account.{% endtrans %}</p>
                <div class="row">
                    {% if third_party_login.facebook | default(false) %}
                        <div class="col-xs-{{ columns }} text-center"><a class="connect facebook" data-href="{{ path("lc_link_facebook") }}" title="Facebook">Facebook</a></div>
                    {% endif %}
                    {% if third_party_login.twitter | default(false) %}
                        <div class="col-xs-{{ columns }} text-center"><a class="connect twitter" href="{{ path('hwi_oauth_service_redirect', {'service': 'twitter'}) }}" title="Twitter">Twitter</a></div>
                    {% endif %}
                    {% if third_party_login.google | default(false) %}
                        <div class="col-xs-{{ columns }} text-center"><a class="connect google" href="{{ path('hwi_oauth_service_redirect', {'service': 'google'}) }}" title="Google">Google</a></div>
                    {% endif %}
                    {% if third_party_login.nfg | default(false) %}
                        <style scoped>
                            .lc-box .nfg {
                                background-position: 2px 0;
                                background-color: #EF9618;
                                {% image '@LoginCidadaoCoreBundle/Resources/public/images/meurs_connect_nfg_home.png' %}
                                background-image: url('{{ asset_url | e('css') }}');
                                {% endimage %}
                            }

                            @media (max-width: 767px) {
                                .lc-box .nfg {
                                    background-position: 0;
                                    background-color: #fff;
                                    background-size: 45px;
                                    {% image '@LoginCidadaoCoreBundle/Resources/public/images/lcrs_connect_nfg.png' %}
                                    background-image: url('{{ asset_url | e('css') }}');
                                    {% endimage %}
                                }
                            }
                        </style>
                        <div class="col-xs-{{ columns }} text-center"><a class="connect nfg nfgpopup" data-href="{{ path('nfg_login') }}" title="Nota Fiscal GaÃºcha">NFG</a></div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endif %}
